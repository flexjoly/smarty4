<?xml version="1.0" encoding="iso-8859-1"?>
<smarty>
    <configSection name="init">
        <sourceLanguageName scope="default" value="Smarty"/>
        <targetLanguageName scope="default" value="Php"/>
    </configSection>

    <configSection name="compiler">
        <properties scope="default">
            <property name="compileLocking" value="on"/>
            <property name="parserTrace" value="off"/>
        </properties>
        <compilerConfigXml scope="default" value="./CompilerConfig.xml"/>
    </configSection>

    <configSection name="caching">
        <properties scope="default">
            <property name="cacheLifetime" type="numeric" value="3600"/>
            <property name="cacheModifiedCheck" value="off"/>
            <property name="forceCache" value="off"/>
        </properties>
     </configSection>
</smarty>